{
  "manifest_version": 3,
  "name": "Inbox Triage Extension",
  "version": "1.0.0",
  "description": "AI-powered email summarization and reply drafting using on-device models for Gmail and Outlook",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": [
        "content/selectors.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Open Inbox Triage",
    "default_icon": {
      "16": "assets/icons/favicon-16x16.png",
      "32": "assets/icons/favicon-32x32.png",
      "48": "assets/icons/android-icon-48x48.png",
      "96": "assets/icons/favicon-96x96.png",
      "144": "assets/icons/android-icon-144x144.png"
    }
  },
  "icons": {
    "16": "assets/icons/favicon-16x16.png",
    "32": "assets/icons/favicon-32x32.png",
    "48": "assets/icons/android-icon-48x48.png",
    "96": "assets/icons/favicon-96x96.png",
    "128": "assets/icons/android-icon-144x144.png",
    "144": "assets/icons/android-icon-144x144.png",
    "192": "assets/icons/android-icon-192x192.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils/*.js",
        "content/*.js"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ]
    }
  ]
}